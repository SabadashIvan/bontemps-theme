<div class=" text-center">
<h1 class="section-header">{{ section.settings.section_title }}</h1>
<p>{{ section.settings.subtitle }}</p>
</div>
{% for block in section.blocks %}
{% capture image_layout %}
 <div class="col-sm-5 about-image-wrap">
  {% include 'responsive-image' with image: block.settings.image, image_class: "about-image", max_width: 700, max_height: 800 %}
 </div>
{% endcapture %}
  <div class="row d-flex align-items-center" style='padding: 1em 0;'>
  {{ image_layout }}
  <div class="text-left col-sm-7">
    <h2 class="about-subtitle">{{ block.settings.heading}}</h2>
    <p>{{ block.settings.text_content }}</p>
    </div>
  </div>
{% endfor %}
{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}

{% schema %}
  {
    "name": {
      "en": "About main Content"
    },
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": {
          "en": "Section Heading"
        },
        "default": {
          "en": "Rethinking beverages for our female contemporaries."
        }
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": {
          "en": "Section subeading"
        },
        "default": {
          "en": "Our blends are designed to heighten the highs, cushion the lows and complement the in-betweens of women’s everyday pursuits."
        }
      }
    ],
    "blocks": [
      {
        "type": "quote",
        "name": "About block",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "section heading",
            "default": {
              "en": "It’s 2018, your teas should be clean."
            }
          },
          {
            "type": "text",
            "id": "text_content",
            "label": "Text Content",
            "default": "lorem"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}
