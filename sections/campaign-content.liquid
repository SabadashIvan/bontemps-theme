<div class=" text-center">
<h2 class="section-header">{{ section.settings.section_title }}</h2>
<p class="text-orange">{{ section.settings.subtitle }}</p>
</div>
  <div class="row d-flex align-items-center" style='padding: 1em 0;'>

{% for block in section.blocks %}
  <div class="d-flex flex-column align-items-center justify-content-between col-6 col-sm-4 col-md-3">
    <img class="about-image" src="{{ block.settings.image | img_url: '800x' }}"/>
    <h2 class="about-subtitle">{{ block.settings.heading}}</h2>
    <a href="{{block.settings.link_url}}">{{ block.settings.link_text }}</a>
    </div>
{% endfor %}
  </div>

{% if section.blocks.size == 0 %}
  {% include 'no-blocks' %}
{% endif %}

{% schema %}
  {
    "name": {
      "en": "Campaign Content"
    },
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": {
          "en": "Section Heading"
        },
        "default": {
          "en": "Rethinking beverages for our female contemporaries."
        }
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": {
          "en": "Section subeading"
        },
        "default": {
          "en": "Our blends are designed to heighten the highs, cushion the lows and complement the in-betweens of womenâ€™s everyday pursuits."
        }
      }
    ],
    "blocks": [
      {
        "type": "quote",
        "name": "About block",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "block title",
            "default": {
              "en": "Ali, Entrepeneur"
            }
          },
          {
            "type": "text",
            "id": "link_text",
            "label": "Text Content",
            "default": "lorem"
          },
          {
            "type": "url",
            "id": "link_url",
            "label": "Link URL"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}
