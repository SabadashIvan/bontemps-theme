{% comment %}
  Password message which you can edit on http://www.shopify.com/admin/online_store/preferences
{% endcomment %}
{% unless shop.password_message == blank %}
  <div class="password-message">
    {{ shop.password_message }}
  </div>
{% endunless %}
<div class="row text-left contained password-content-box">


<div class="col-sm-6 text-center bottom-box">
  <div class="top-show content-copy">
    <h2 class="cooper">{{section.settings.first_section_header}}</h2>
    <p>{{section.settings.first_section_copy}}</p>
  </div>
  <div class="password-content-image">
    <img src="{{ section.settings.content_image | img_url: '1200x1200' }}">
  </div>
  </div>
  <div class="top-box col-sm-6">
    <div class="bottom-show content-copy">
    <h2 class="cooper">{{section.settings.first_section_header}}</h2>
    <p>{{section.settings.first_section_copy}}</p>
    </div>
    <div class="content-copy">
    <h2 class="cooper">{{section.settings.second_section_header}}</h2>
    <p>{{section.settings.second_section_copy}}</p>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": {
      "en": "Content",
      "de": "Inhalt",
      "fr": "Contenu",
      "it": "Contenuto",
      "ja": "コンテンツ",
      "es": "Contenido",
      "pt-BR": "Conteúdo"
    },
    "settings": [
      {
        "type": "image_picker",
        "id": "content_image",
        "label": "Content Image"
      },
      {
        "type": "checkbox",
        "id": "newsletter_enable",
        "label": {
          "en": "Show newsletter signup",
          "de": "Newsletter Signup zeigen",
          "fr": "Afficher l'inscription à la newsletter",
          "it": "Mostra iscrizione alla newsletter",
          "ja": "ニュースレターのサインアップを表示する",
          "es": "Mostrar suscripción al boletín",
          "pt-BR": "Exibir assinatura da newsletter"
        },
        "default": true
      },
      {
        "type": "richtext",
        "label": "Main Copy Text",
        "id": "main_copy"
      },
      {
        "type": "text",
        "label": "First Section Header",
        "id": "first_section_header",
        "default": "It's 2018, your teas should be clean."
      },
      {
        "type": "richtext",
        "label": "First Section Copy",
        "id": "first_section_copy",
        "default": "Most of our favourite tea brands use artifical flavours, pesticides & bleaches. In response we made ours 100% organic with none of the bad stuff."
      },
      {
        "type": "text",
        "label": "Second Section Header",
        "id": "second_section_header",
        "default": "Time well spent."
      },
      {
        "type": "richtext",
        "label": "Second Section Copy",
        "id": "second_section_copy",
        "default": "Our community is dedicated to helping women do what they love, stand up for what they believe in, and follow their passions. We call this Time Well Spent."
      },
      {
        "type": "text",
        "label": "Third Section Header",
        "id": "third_section_header",
        "default": "Unused"
      },
      {
        "type": "richtext",
        "label": "Third Section Copy",
        "id": "third_section_copy",
        "default": "Unused"
      }
    ]
  }
{% endschema %}
