<div class="contained">
{% if section.settings.newsletter_enable %}
  {% form 'customer', id: 'ContactPassword' %}

    {%- assign formId = 'PasswordNewsletterForm' -%}

    <p class="h4 text-yellow">
      {{ section.settings.newsletter_form_heading | escape | upcase }}
    </p>
    {% if section.settings.newsletter_form_subheading != blank %}
      <div class="password__form-subheading rte">{{ section.settings.newsletter_form_subheading }}</div>
    {% endif %}
    <input type="hidden" name="contact[tags]" value="prospect, password page">
    <label for="{{ formId }}-email" class="label--hidden">{{ 'general.password_page.signup_form_email_label' | t }}</label>

    <div class="page-width">
      {% include 'form-status', formId %}
    </div>

    {% unless form.posted_successfully? %}
      <div class="input-group password__input-group">
        <div class="input-group__field">
          <input
            type="email"
            name="contact[email]"
            id="{{ formId }}-email"
            placeholder="{{ section.settings.newsletter_placeholder | escape }}"
            {%- if form.errors contains 'email' -%}
              class="input--error"
              aria-invalid="true"
              aria-describedby="{{ formId }}-email-error"
            {%- endif -%}
          >
          <span id="{{ formId }}-email-error" class="input-error-message">{% include 'icon-error' %} {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.</span>
        </div>
        <span class="input-group__btn">
          <button type="submit" name="commit" class="btn" id="email-submit">
            <span>{{ section.settings.newsletter_button_text | escape }}</span>
          </button>
        </span>
      </div>
    {% endunless %}
  {% endform %}
{% endif %}

{% if section.settings.show_share_buttons %}
  <div class="password-social-sharing">
    <p class="password__form-heading h4">{{ section.settings.social_message | escape }}</p>
    {% include 'social-sharing' %}
  </div>
{% endif %}

<div class="password-powered-by">
  {% capture shopify %}
    <a class="classic-link shopify-link" href="//www.shopify.com" target="_blank" title="Create your own online store with Shopify">Shopify</a>
  {% endcapture %}

  <small>Find out what you love doing. Do it.</small>
</div>
