<div class="section-inner about-content" style="padding-top: 0;">
  <div class="text-center limitcopywidth">
  <h1 class="section-header">{{ section.settings.section_title }}</h1>
  <p class="subtitle">{{ section.settings.subtitle }}</p>
  <p>{{ section.settings.copy }}</p>
  </div>
  {% if section.blocks.size > 0 %}
  {% for block in section.blocks %}
    <div class="text-left col-sm-7 order-2 order-sm-1 order-md-1">
      <h4 class="about-subtitle">{{ block.settings.heading}}</h2>
      <p>{{ block.settings.text_content }}</p>
    </div>
  {% endfor %}
  {% endif %}
  <div class="d-flex align-items-center justify-content-center" style="padding: 2em">
    <a class="btn flow-button" href="{{ section.settings.cta-link }}">{{ section.settings.cta-copy }}</a>
  </div>
</div>


{% schema %}
  {
    "name": {
      "en": "Pesticides Content"
    },
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "section_title",
        "label": {
          "en": "Section Heading"
        },
        "default": {
          "en": "Pesticides Lorem"
        }
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": {
          "en": "Section subeading"
        },
        "default": {
          "en": "Pesticides Lorem"
        }
      },
      {
        "type": "richtext",
        "id": "copy",
        "label": {
          "en": "Section Copy"
        },
        "default": {
          "en": "<p>Pesticides Lorem</p>"
        }
      },
      {
        "type": "text",
        "id": "cta-copy",
        "label": "CTA Copy"
      },
      {
        "type": "page",
        "id": "cta-link",
        "label": "CTA Link"
      }
    ],
    "blocks": [
      {
        "type": "quote",
        "name": "About block",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "section heading",
            "default": {
              "en": "Itâ€™s 2018, your teas should be clean."
            }
          },
          {
            "type": "text",
            "id": "text_content",
            "label": "Text Content",
            "default": "lorem"
          }
        ]
      }
    ]
  }
{% endschema %}
