<div class="section-inner no-pad differentiation-content" style="padding-top: 0; background-color: {{ section.settings.bg-color }}">
  <div class="text-center limitcopywidth wider">
    <div class="row d-flex align-items-center" style='padding: 0em 0;'>
    <div class="col-md-5 about-image-wrap order-1 order-md-1" style='padding: 0;'>
        <img style="max-height:300px" class="about-image text-orange" src="{{ section.settings.image | img_url: '800x' }}"/>
      </div>
      <div class="text-center col-md-7 order-2 order-md-2 differentiation-copy">
        <h2 class="about-subtitle">{{ section.settings.heading}}</h2>
        <p>{{ section.settings.text_content }}</p>
        <style type="text/css">
          strong>a{
            text-decoration: underline !important;
          }
        </style>
      </div>
    </div>
  </div>
  {% if section.settings.cta1_text != blank %}
  <div class="small-show" style="margin-top:1em;">
    <div class="d-flex align-items-center row-70 row">
      <div class="col-12 text-center">
        <a class="btn flow-button larger subscription_start" href="{{ section.settings.cta1_url }}">
        <span>{{ section.settings.cta1_text }}</span>
        </a>
      </div>
    </div>
  </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": {
      "en": "product diff img text"
    },
    "class": "index-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "section heading",
        "default": "Corn tea bags mean non-toxic tea."
      },
      {
        "type": "richtext",
        "id": "text_content",
        "label": "Text Content",
        "default": "<p>Not just a delicious side at your summer BBQ. We make our tea bags out of non-GMO corn because it eliminates the need for plastics, bleaches, pesticides and carcinogenic agents. Better for you, better for the planet.</p>"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "color",
        "id": "bg-color",
        "label": "Background Color",
        "default": "#ffc551"
      },
      {
        "type": "text",
        "id": "cta1_text",
        "label": "CTA text",
        "default": "Sign Up"
      },
      {
        "type": "url",
        "id": "cta1_url",
        "label": "CTA link"
      }
    ],
    "presets": [
    {
      "name": "product diff img text",
      "category": "Differentiation"
    }
    ]
  }
{% endschema %}
