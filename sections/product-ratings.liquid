<div class="row contained product-reviews">
    <div class="col-sm-6 offset-sm-3 d-flex flex-column align-items-center justify-content-center text-center">
        <h3>{{ section.settings.title }}</h3>
        {{ section.settings.text }}
         <div class="yotpo-star-box yotpo">
          <div class="yotpo bottomLine"
            data-product-id="{{ product.id }}">
          </div>
        </div>
        <a class="small btn btn-text reviews-link" href="{{ section.settings.cta_link }}">
        <span>XX(count){{ section.settings.cta_text }}</span>
        </a>
    </div>
</div>

{% schema %}
{
  "name": {
    "en": "Product Ratings Count"
  },
  "settings": [
    {
    "type": "text",
    "id": "title",
    "label": "Section Title",
    "default": "Our Customers Love This Tea"
    },
    {
    "type": "text",
    "id": "cta_text",
    "label": "Button Text",
    "default": "Reviews"
    },
    {
     "type": "url",
     "id": "cta_link",
     "label": "Button Link"
    }
  ],
    "presets": [
    {
    "name": "Product Ratings Count",
    "category": "Product"
    }
  ]
}
{% endschema %}
