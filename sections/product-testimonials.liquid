<div class="product-testimonials" data-section-id="{{ section.id }}" data-section-type="quotes">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}

  {% if section.blocks.size > 0 %}
    <div class="quotes-wrapper">
      <div class="quotes-slider d-flex align-items-center" id="Quotes-{{ section.id }}" data-count="{{ section.blocks.size }}">
        {% for block in section.blocks %}
          <div class="quotes-slide--{{ block.id }}" {{ block.shopify_attributes }}>
            <div class="row quote-row d-flex align-items-center">
            <div class="col-4">
            {% assign featured_image = block.settings.image %}
                <img src="{{featured_image | img_url: '800x' }}"/>
            </div>
            <div class="col-8">
            <blockquote class="quotes-slider__text text-left">
              {% if block.settings.title != blank %}
                <div class="quote-title">{{ block.settings.title }}</div>
              {% endif %}
              {% if block.settings.author != blank %}
                <h2 class="quote-author">{{ block.settings.author | escape }}</h2>
              {% endif %}
              {% if block.settings.quote != blank %}
                <div class="quote-content">{{ block.settings.quote }}</div>
              {% endif %}
            </blockquote>
            <span class="ratings star star-{{ block.settings.star-count }}"><i class="fa fa-star"></i></span>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  {% endif %}

  {% if section.blocks.size == 0 %}
    {% include 'no-blocks' %}
  {% endif %}
</div>

