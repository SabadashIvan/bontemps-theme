<div class="section-inner has-bottom-curve small-show bg-pink" style="background-image: url('{{ section.settings.image_full | img_url: '2000x2000' }});">
  {% assign bg_color = "bg-white" %}
    {% include "curved-svg" %}
</div>
<div class="section-inner has-bottom-curve flow-info-2-text small-hide">
  <div class="row">
  <div class="col-sm-6 d-flex flex-column justify-content-center">
    <h2 class="">{{ section.settings.text }}</h2>
    <p class="">{{ section.settings.text_lower }}</p>
  </div>
  </div>
  {% assign bg_color = "bg-yellow" %}
    {% include "curved-svg" %}
</div>
<div class="section-inner bg-white has-both-curve small-show" style="background-image: url('{{ section.settings.image_mobile | img_url: '2000x2000' }});">
    <div class="d-flex align-items-center row-70 row">
    <div class="col-12 text-center">
    {% for block in section.blocks limit:1 %}
        <p>MEMBERSHIPS BEGIN AT $16</p>
        {% unless block.settings.title_1 == blank %}
          <h1 class="h1 mega-title slideshow__title{% if settings.link != blank %} slideshow__title--has-link{% endif %}{% if section.settings.text_size == 'large' %} mega-title--large{% endif %}">
            {{ block.settings.title_1 | escape }}<br/>{% if block.settings.title_2 %}{{ block.settings.title_2 | escape }}{% endif %}
          </h1>
        {% endunless %}
        {% unless block.settings.subheading == blank %}
          <p class="slideshow__subtitle{% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">
            {{ block.settings.subheading | escape }}
          </p>
        {% endunless %}
        <a id="" class="btn flow-button subscription_start" href="#">
        <span>{{ block.settings.cta_text }}</span>
        </a>
      {% endfor %}
    </div>
    </div>
    {% assign bg_color = "bg-yellow small-show" %}
    {% include "curved-svg" %}
  </div>
{% schema %}
{
  "name": {
    "en": "Subscription Flow Info 2"
  },
  "settings": [
    {
    "type": "richtext",
    "id": "text",
    "label": "text"
    },
    {
    "type": "richtext",
    "id": "text_lower",
    "label": "text"
    },
    {
      "type": "image_picker",
      "id": "image_fullsize",
      "label": "image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "image"
    }
  ],
    "presets": [
    {
    "name": "Subscription Flow Info 2",
    "category": "Custom"
    }
  ]
}
{% endschema %}
