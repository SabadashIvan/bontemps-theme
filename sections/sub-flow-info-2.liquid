<div class="section-inner">
  <div class="row contained">
  <div class="col-md-6 d-flex align-items-center" style="padding: 0 4em;">
    <h3 class="">{{ section.settings.text }}</h3>
    <p class="">{{ section.settings.text_lower }}</p>
  </div>
    <div class="col-md-6 col-6 text-center d-flex align-items-center">
      <img src="{{ section.settings.image | img_url: '800x800' }}">
    </div>
  </div>
</div>

