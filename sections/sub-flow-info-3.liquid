
<div class="section-inner bg-yellow">
  <div class="row">
  <div class="col-12 row-80 text-center" style="margin-bottom: 4em;">
    <h2>{{ section.settings.text }}</h2>
    <p>{{ section.settings.text_lower }}</p>
  </div>
    <div class="row contained smaller">
      <div class="col-sm-6 text-center">
        <img class="info-image " src="{{ section.settings.col_1_image | img_url: '300x300' }}">
        <p class="text-center">{{ section.settings.col_1_content }}</p>
      </div>
      <div class="col-sm-6 text-center">
        <img class="info-image " src="{{ section.settings.col_2_image | img_url: '300x300' }}">
        <p class="text-center text-center">{{ section.settings.col_2_content }}</p>
      </div>
      {% comment %} <div class="col-md-3 col-6 text-center">
        <img class="info-image " src="{{ section.settings.col_3_image | img_url: '300x300' }}">
        <p class="text-center">{{ section.settings.col_3_content }}</p>
      </div>
      <div class="col-md-3 col-6 text-center">
        <img class="info-image " src="{{ section.settings.col_4_image | img_url: '300x300' }}">
        <p class="text-center">{{ section.settings.col_4_content }}</p>
      </div> {% endcomment %}
    </div>
  </div>
  <div class="small-hide" style="margin-top:1em;">
    <div class="page-width text-center">
      <a id="" class="btn flow-button subscription_start" href="#">
        <span>{{ section.settings.cta_text }} &nbsp;{% include 'icon-arrow-right' %}</span>
      </a>
    </div>
  </div>
  <div class="small-show" style="margin-top:1em;">
    <div class="d-flex align-items-center row-70 row">
      <div class="col-12 text-center">
        <a id="" class="btn flow-button larger subscription_start" href="#">
        <span>{{ section.settings.cta_text }} &nbsp;{% include 'icon-arrow-right' %}</span>
        </a>
      </div>
    </div>
  </div>
  <div class="row" style="height: 40px;"></div>
</div>

{% schema %}
{
  "name": {
    "en": "Subscription Flow Info 3"
  },
  "settings": [
    {
    "type": "text",
    "id": "text",
    "label": "text"
    },
    {
    "type": "text",
    "id": "text_lower",
    "label": "text lower"
    },
    {
    "type": "image_picker",
    "id": "col_1_image",
    "label": "column 1 image"
    },
    {
    "type": "richtext",
    "id": "col_1_content",
    "label": "column 1 text"
    },
    {
    "type": "image_picker",
    "id": "col_2_image",
    "label": "column 2 image"
    },
    {
    "type": "richtext",
    "id": "col_2_content",
    "label": "column 2 text"
    },
    {
    "type": "image_picker",
    "id": "col_3_image",
    "label": "column 3 image"
    },
    {
    "type": "richtext",
    "id": "col_3_content",
    "label": "column 3 text"
    },
    {
    "type": "image_picker",
    "id": "col_4_image",
    "label": "column 4 image"
    },
    {
    "type": "richtext",
    "id": "col_4_content",
    "label": "column 4 text"
  },
  {
    "type": "text",
    "id": "cta_text",
    "label": "CTA text",
    "default": "Sign Up"
  }
  ],
    "presets": [
    {
    "name": "Subscription Flow Info",
    "category": "Custom"
    }
  ]
}
{% endschema %}
