{% if block.settings.image_mobile != blank %}
    <script type="text/javascript">
    var windowsize = $(window).width();
        $(window).resize(function() {
        windowsize = $(window).width();
        if (windowsize < 750) {
            $(".background-target-{{forloop.index}}").attr("data-bgset", "{{block.settings.image_mobile | img_url: '800x' }}");
        } else if (windowsize >= 750){
            $(".background-target-{{forloop.index}}").attr("data-bgset", "{{block.settings.image | img_url: '2000x'}}");
        }else {
            $(".background-target-{{forloop.index}}").attr("data-bgset", "{{block.settings.image | img_url: '2000x'}}");
        }
        });
        $(document).ready(function() {
        windowsize = $(window).width();
        if (windowsize < 750) {
            $(".background-target-{{forloop.index}}").attr("data-bgset", "{{block.settings.image_mobile | img_url: '800x'}}");
        } else if (windowsize >= 750){
            $(".background-target-{{forloop.index}}").attr("data-bgset", "{{block.settings.image | img_url: '2000x'}}");
        }else {
            $(".background-target-{{forloop.index}}").attr("data-bgset", "{{block.settings.image | img_url: '2000x'}}");
        }
        });
    </script>
{% endif %}