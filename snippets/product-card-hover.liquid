{% if page.url contains "threesome"  %}
<a href="#" {% if product.available %}onClick='addProduct("{{ product.selected_or_first_available_variant.id }}", "{{product.title | escape }}");'{% endif %}>
{% else %}
<a href="{{ product.url | within: collection }}">
{% endif %}
<div class='product-card-hover bg_hover_{{ product.id }} d-flex flex-column align-items-center justify-content-center'>
  {% assign desc =  product.description | split: "<!--ingredients-->" %}
  <p>{{ product.description | strip_html | truncatewords: 15, '...' }}</p>
  {% if desc != blank %}
  {% for collection in product.collections %}
  {% if collection.handle contains "variety" %}
  {% assign variety = true %}
  {% else %}
  {% assign variety = false %}
  {% endif %}
  {% endfor %}
  {% if variety %}
  <p>Includes these fine teas:</p>
  {% else %}
  <p>Organic Ingredients:</p>
  {% endif %}
  <p>{{ desc[1] }}</p>
  {% endif %}
  <div class="align-self-center">{% include 'caffeine' %}</div>
</div>
</a>