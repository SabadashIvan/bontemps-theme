{% if page.url contains "threesome"  %}
<a href="#" {% if product.available %}onClick='addProduct("{{ product.selected_or_first_available_variant.id }}", "{{product.title | escape }}");'{% endif %}>
{% else %}
<a href="{{ product.url | within: collection }}">
{% endif %}
{% assign size = product.images.size %}
{% assign second = size | minus: 2 %}
{% if size > 2 %}
<div class='product-card-hover bg_hover_{{ product.id }} d-flex flex-column align-items-center justify-content-center' style="background-image: url('{{ product.images[second] | img_url: '600', scale: 1 }}'); background-size: cover;">
{% else %}
<div class='product-card-hover bg_hover_{{ product.id }} d-flex flex-column align-items-center justify-content-center' style="background-image: url('{{ product.images.last | img_url: '600', scale: 1 }}'); background-size: cover;">
{% endif %}
  {% comment %} {% assign desc =  product.description | split: "<!--ingredients-->" %}
  <p class="strong">{{ product.description | strip_html | truncatewords: 15, '...' }}</p>
  {% if desc != blank %}
  {% for collection in product.collections %}
  {% if collection.handle contains "variety" %}
  {% assign variety = true %}
  {% else %}
  {% assign variety = false %}
  {% endif %}
  {% endfor %}
  {% if variety %}
  <p class="strong">Includes these fine teas:</p>
  {% else %}
  <p class="strong">Organic Ingredients:</p>
  {% endif %}
  <p>{{ desc[1] }}</p>
  {% endif %}
  <div class="align-self-center">{% include 'caffeine' %}</div> {% endcomment %}
</div>
</a>
