<a href="{{ product.url | within: collection }}">
<div class='product-card-hover bg_hover_{{ product.id }} d-flex flex-column align-items-center justify-content-around'>
  {% assign desc =  product.description | split: "<!--ingredients-->" %}
  <p>{{ product.description | strip_html | truncatewords: 15, '...' }}</p>
  {% if desc != blank %}
  <p>Organic Ingredients:</p>
  <p>{{ desc[1] }}</p>
  {% endif %}
  <div>{% include 'caffeine' %}</div>
</div>
</a>