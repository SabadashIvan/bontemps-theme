{% for tag in product.tags %}
{% if tag contains "sample" %}
{% assign product_tag = tag %}
{% endif %}
{% endfor %}
{% for product in collections.samples.products %}
    {% for tag in product.tags %}
    {% if tag == product_tag and product.available %}
    {% assign has_sample = true %}
    {% assign sample = product %}
    {% endif %}
    {% endfor %}
{% endfor %}
{% if has_sample %}
<p class="sample-box">
{{ product_tag }}, <a href="{{sample.url}}">{{ sample.title }}</a>
</p>

  {% if sample.available %}
  <form action="/cart/add" method="post" enctype="multipart/form-data" data-productid="{{sample.id}}">
  {% endif %}
    <button
      type="submit"
      name="add"
      id="AddToCart-{{ section.id }}"
      class="btn-submit"
      data-add-to-cart
      {% unless current_variant.available %}disabled="disabled"{% endunless %}>
        <span data-add-to-cart-text>
          {% if current_variant.available %}
            {{ 'products.sample.add_to_cart' | t }}
          {% else %}
            {{ 'products.sample.sold_out' | t }}
          {% endif %}
        </span>
    </button>
    {% if sample.available %}
  </form>
{% endif %}


{% endif %}