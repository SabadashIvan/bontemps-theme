{% for tag in product.tags %}
{% if tag contains "sample" %}
{% assign product_tag = tag %}
{% endif %}
{% endfor %}
{% for product in collections.samples.products %}
    {% for tag in product.tags %}
    {% if tag == product_tag and product.available %}
    {% assign has_sample = true %}
    {% assign sample = product %}
    {% endif %}
    {% endfor %}
{% endfor %}
{% if has_sample %}
<p class="sample-box">
{{ product_tag }}, {{ sample.variant_id }} <a href="{{sample.url}}">{{ sample.title }}</a>
</p>

    <button
        type="submit"
        name="add"
        id="sample-adder"
        class="btn-submit"
        sample_id ="{{ sample.id }}"
        data-add-to-cart
        {% unless current_variant.available %}disabled="disabled"{% endunless %}>
        <span data-add-to-cart-text>
        {% if current_variant.available %}
            {{ 'products.product.add_to_cart' | t }}
        {% else %}
            {{ 'products.product.sold_out' | t }}
        {% endif %}
        </span>
    </button>



{% endif %}
<script type="text/javascript">
console.log({{ sample }});
</script>